# When adding additional environment variables, the schema in "/src/env.js"
# should be updated accordingly.

# Next Auth
# You can generate a new secret on the command line with:
# npx auth secret
# https://next-auth.js.org/configuration/options#secret
AUTH_SECRET="your-auth-secret-here" # Generated by create-t3-app.
NEXTAUTH_URL="https://yourdomain.com"

APP_BASE_URL="https://yourdomain.com"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXTAUTH_URL="https://yourdomain.com"

# Database Configuration
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"
DIRECT_URL="postgresql://user:password@host:5432/database?schema=public"

# Cloudinary Configuration (for property images)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Asset Storage Configuration (for user avatars, etc.)
# Options: "local" (default), "cloudinary"
ASSET_STORAGE="local"
# Local storage settings (when ASSET_STORAGE=local)
UPLOAD_DIR="/data/uploads/avatars"  # Docker volume path
UPLOAD_BASE_URL="/uploads/avatars"  # Public URL path

# Midtrans Payment Gateway Configuration
MIDTRANS_SERVER_KEY="your-server-key"
MIDTRANS_CLIENT_KEY="your-client-key"
MIDTRANS_IS_PRODUCTION="false"
# Public Midtrans Config (for client-side Snap script)
NEXT_PUBLIC_MIDTRANS_CLIENT_KEY="your-client-key"
NEXT_PUBLIC_MIDTRANS_IS_PRODUCTION="false"

# Cron Configuration
# Secret token untuk autentikasi cron job (generate random string panjang)
# Contoh generate: openssl rand -base64 32
CRON_SECRET="your-random-secret-token-here"

# Grace period dalam menit untuk booking UNPAID tanpa payment sebelum dihapus
# Default: 30 menit
BOOKING_UNPAID_GRACE_MINUTES="30"

# Database Init Mode (untuk docker-compose)
# Options: "migrate" (default), "reset", "init"
DB_INIT_MODE="migrate"

# ðŸš€ Deployment Control Flags (for Docker/Dokploy)
# Set to "true" in production after initial setup to skip operations on restarts
SKIP_PRISMA_GENERATE="false"
SKIP_DB_MIGRATION="false"
SKIP_DB_SEED="false"

# ðŸ”„ Database Reset Mode (for initial setup or full reset)
# Options: "migrate" (default - safe), "reset" (DESTRUCTIVE - drops all data)
# Use "reset" only for fresh install or intentional data wipe
DB_RESET_MODE="migrate"

# Timezone (optional, default UTC)
TZ="UTC"

NODE_ENV="production"
HOST="0.0.0.0"
PORT="3000"
NEXT_PUBLIC_APP_NAME="MyHome"
NEXT_TELEMETRY_DISABLED="1"

